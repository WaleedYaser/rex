{
	"version": "2.0.0",
    "tasks": [
        {
            "label": "build rex",
            "type": "shell",
            "windows": {
                "command": "build.bat"
            },
            "linux": {
                "command": "bash build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/rex"
            },
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "build rex-viewer",
            "type": "shell",
            "windows": {
                "command": "build.bat"
            },
            "linux": {
                "command": "bash build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/viewer"
            },
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "build rex all",
            "type": "shell",
            "windows": {
                "command": "build-all.bat"
            },
            "linux": {
                "command": "bash build-all.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "build rex-scratch",
            "type": "shell",
            "windows": {
                "command": "build.bat"
            },
            "linux": {
                "command": "bash build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/rex-scratch"
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}